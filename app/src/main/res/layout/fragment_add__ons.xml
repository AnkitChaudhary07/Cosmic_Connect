<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_OnsFragment"
    android:paddingLeft="@dimen/_15sdp"
    android:paddingRight="@dimen/_15sdp"
    android:background="@drawable/background">

    <SearchView
        android:id="@+id/addOns_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:layout_marginTop="@dimen/_30sdp"
        android:queryHint="Enter Place"
        android:backgroundTint="#35FFFFFF"
        android:textColorHint="@color/black">
    </SearchView>

    <TextView
        android:id="@+id/membership_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="Membership"
        android:textSize="@dimen/_20sdp"
        android:textColor="@color/white"
        android:layout_below="@+id/addOns_search"
        android:textStyle="bold"/>

    <HorizontalScrollView
        android:id="@+id/membership_scroll"
        android:layout_width="match_parent"
        android:layout_below="@id/membership_heading"
        android:padding="@dimen/_1sdp"
        android:layout_height="@dimen/_150sdp"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:src="@drawable/all_acess_photo" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:src="@drawable/lifetime_photo" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:src="@drawable/yearly_photo" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:src="@drawable/silver_photo" />
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:paddingLeft="@dimen/_30sdp"
        android:layout_below="@+id/membership_scroll"
        android:textColor="#A7FFFFFF"
        android:text="@string/primium"/>

    <TextView
        android:id="@+id/addOns_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="Add-Ons"
        android:textSize="@dimen/_20sdp"
        android:textColor="@color/white"
        android:layout_below="@+id/textView1"
        android:textStyle="bold"/>

    <HorizontalScrollView
        android:id="@+id/addOn_scroll"
        android:layout_width="match_parent"
        android:layout_below="@id/addOns_heading"
        android:padding="@dimen/_10sdp"
        android:layout_height="@dimen/_150sdp"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_350sdp"
                android:layout_height="wrap_content"
                android:src="@drawable/gold_add_on" />

            <ImageView
                android:layout_width="@dimen/_350sdp"
                android:layout_height="wrap_content"
                android:src="@drawable/platinum_add_on" />

            <ImageView
                android:layout_width="@dimen/_350sdp"
                android:layout_height="wrap_content"
                android:src="@drawable/platinum_plus_add_on" />

            <ImageView
                android:layout_width="@dimen/_350sdp"
                android:layout_height="wrap_content"
                android:src="@drawable/silver_add_on" />
        </LinearLayout>
    </HorizontalScrollView>


</RelativeLayout>