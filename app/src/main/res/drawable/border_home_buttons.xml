<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Left border with a larger width -->
    <item
        android:left="@dimen/_20sdp"
        android:right="@dimen/_2sdp"
        android:top="@dimen/_2sdp"
        android:bottom="@dimen/_2sdp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:color="@color/white"
                android:width="@dimen/_2sdp" />
            <!-- Add corner radius to make it round -->
            <corners android:radius="@dimen/_9sdp" />
        </shape>
    </item>
</layer-list>
